<mvc:View controllerName="embedding.controller.App"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:upload="sap.m.upload"
    xmlns="sap.m">
    <App id="app">
        <Page id="page" floatingFooter="true" title="{i18n>title}" busyIndicatorDelay="0">
            <headerContent>
                <Button icon="sap-icon://upload-to-cloud" tooltip="{i18n>createEmbeddings}" press=".onCreateEmbeddings" binding="{/createEmbeddings(...)}" />
                <Button icon="sap-icon://delete" tooltip="{i18n>delete}" press=".onDeleteEmbeddings" binding="{/deleteEmbeddings(...)}" />
            </headerContent>
            <content>
                <List id="s4data" items="{/DocumentChunk}">
                    <StandardListItem title="{productId}" description="{productType}"></StandardListItem>
                </List>
            </content>
        </Page>
    </App>
</mvc:View>